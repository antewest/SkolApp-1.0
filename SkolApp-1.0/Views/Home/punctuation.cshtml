@{
    ViewBag.Title = "Skiljetecken";
}

<h2 class="header">Skiljetecken.</h2>

<div class="row">
    <div class="col-xs-12">
        <div class="col-md-6 col-sm-6 col-xs-12 no-space">
            <div class="image-wrapper">
                <div class="overlay image" style="background-image: url('/Media/fargburkar.jpg'); background-size: cover;"></div>
            </div>
        </div>

        <div class="col-md-5 col-sm-5 col-sm-offset-1 col-xs-12 col-xs-offset-0">
            <p class="col-xs-12">Bild 1 av 52</p>

            <h3 class="col-xs-12">Vad är det på bilden?</h3>
            <form class="col-xs-12" method="post" ng-submit="">
                <div class="form-group">
                    <input type="text" name="imageDesc" ng-model="" placeholder="Skriv ditt svar här" class="col-xs-12 form-control" />
                </div>

                <div class="form-group">
                    <button type="submit" name="send" class="col-xs-4 btn btn-primary">
                        <i class="fa fa-search" aria-hidden="true"></i>
                        <span>Rätta</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>